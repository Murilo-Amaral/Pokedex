@model Login01.Models.Pokemon

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Pokemon</h1>

<h4>Pokemon</h4>
<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row col-md-12 mb-3">
        <label asp-for="Name" class="control-label col-md-1"></label>
        <input asp-for="Name" class="form-control col-md-11" />
        <div class="row ">
            <span asp-validation-for="Name" class="col-md-12 text-danger"></span>
        </div>
    </div>

    <div class="row col-md-12 mb-3">
        <label asp-for="Description" class="control-label col-md-1"></label>
        <input asp-for="Description" class="form-control col-md-11" />
        <div class="row">
            <span asp-validation-for="Description" class="col-md-12 text-danger"></span>
        </div>
    </div>

    <div class="row col-md-12 mb-3">
        <label asp-for="Type" class="control-label col-md-1"></label>
        <select class="custom-select col-md-11" asp-for="Type">
            <option selected>Tipo...</option>
            <option value="Fogo">Fogo</option>
            <option value="Água">Água</option>
            <option value="Grama">Grama</option>
            <option value="Elétrico">Elétrico</option>
        </select>
    </div>

    <div class="row col-md-12 mb-3">
        <label asp-for="Height" class="control-label col-md-1"></label>
        <input asp-for="Height" class="form-control col-md-11" />
        <div class="row">
            <span asp-validation-for="Height" class="col-md-12 text-danger"></span>
        </div>
    </div>

    <div class="row col-md-12 mb-3">
        <label asp-for="Width" class="control-label col-md-1"></label>
        <input asp-for="Width" class="form-control col-md-11" />
        <div class="row">
            <span asp-validation-for="Width" class="col-md-12 text-danger"></span>
        </div>
    </div>

    <div class="row col-md-12 mb-3">
        <label asp-for="Gender" class="control-label col-md-1"></label>
        <select class="custom-select col-md-11" asp-for="Gender">
            <option selected>Gênero...</option>
            <option value="Macho">Macho</option>
            <option value="Fêmea">Fêmea</option>
        </select>
    </div>

    <div class="row col-md-12 mb-3">
        <label asp-for="Abilities" class="control-label col-md-1"></label>
        <input asp-for="Abilities" class="form-control col-md-11" />
        <div class="row">
            <span asp-validation-for="Abilities" class="col-md-12 text-danger"></span>
        </div>
    </div>
    <div>
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <input type="file" asp-for="Image" class="form-control" />
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow border-bottom-danger mb-4">
            <div class="card-body d-flex">
                <div class="m-5">
                    @try
                    {
                        var base64 = Convert.ToBase64String(@Model.Image);
                        if (!string.IsNullOrEmpty(base64))
                        {
                            var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                            <img class="img-fluid" src="@imgSrc" style="width:125px height:125px" />
                        }
                    }
                    catch
                    {
                        <img class="img-fluid" src="http://www.puspfc.usp.br/sistemas/prefeitura/imgs/sem_foto.png" width="70" />
                    }

                    <div class="form-group" style="margin-top:20px">
                        <button type="submit" value="Confirmar" class="btn btn-info"
                        <span class="icon text-white">
                            <i class="fa fa-pencil"></i>
                        </span>
                        <span class="text text-white">Confirmar</span>
                        </button>

                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>