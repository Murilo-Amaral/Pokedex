@model IEnumerable<Login01.Models.Pokemon>
@{
    ViewBag.Title = "Pokedex";
}
<style>

    #imgPoke {
        max-width: 80px
    }

    #cardPoke {
        height: 500px
    }
</style>
<div class="container-fluid">
    <!--Cabeçalho da página-->
    <h1 class="h5 mb-2  text-danger" style="margin-top:25px;">Pokedex</h1>
    <h1 class="mb-4 text-black-50">Seus Pokemon</h1>
    <!--Card-->
    <div class="row">
        @foreach (var i in Model)
        {
            if (i.Type == "Fogo")
            {
                <div class="col-md-3">
                    <div id="cardPoke" class="card shadow border-bottom-danger mb-4">
                        <div class="card-header py-3">
                            <a class="m-0 font-weight-bold text-danger" asp-action="Details" asp-route-id="@i.Id"> @i.Name   N°: @i.Id</a>
                        </div>
                        <div class="card-body d-flex">
                            <div class="m-5">
                                @try
                                {
                                    var base64 = Convert.ToBase64String(@i.Image);
                                    if (!string.IsNullOrEmpty(base64))
                                    {
                                        var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                                        <img id="imgPoke" class="img-fluid" src="@imgSrc" />
                                    }
                                }
                                catch
                                {
                                    <img class="img-fluid" src="http://www.puspfc.usp.br/sistemas/prefeitura/imgs/sem_foto.png" width="70" />
                                }
                                <h5 style="margin-left:-45px; margin-right:-45px">
                                    @if (i.Description is not null)
                                    {
                                        @i.Description <a class="m-0" asp-action="Details" asp-route-id="@i.Id"> mais </a>
                                    }
                                    else
                                    {
                                        <p style="margin-top: 50px">Sem Descrição</p>
                                    }
                                </h5>
                                <h5 class="text-danger">@i.Type</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (i.Type == "Elétrico")
            {
                <div class="col-md-3">
                    <div id="cardPoke" class="card shadow border-bottom-warning mb-4">
                        <div class="card-header py-3">
                            <a class="m-0 font-weight-bold text-warning" asp-action="Details" asp-route-id="@i.Id"> @i.Name   N°: @i.Id </a>
                        </div>
                        <div class="card-body d-flex">
                            <div class="m-5">
                                @try
                                {
                                    var base64 = Convert.ToBase64String(@i.Image);
                                    if (!string.IsNullOrEmpty(base64))
                                    {
                                        var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                                        <img id="imgPoke" class="img-fluid" src="@imgSrc" />
                                    }
                                }
                                catch
                                {
                                    <img class="img-fluid" src="http://www.puspfc.usp.br/sistemas/prefeitura/imgs/sem_foto.png" width="70" />
                                }
                                <h5 style="margin-left:-45px; margin-right:-45px">@if (i.Description is not null)
                                    {
                                        @i.Description <a class="m-0" asp-action="Details" asp-route-id="@i.Id"> mais </a>
                                    } </h5>
                                <h5 class="text-warning">@i.Type</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (i.Type == "Água")
            {
                <div class="col-md-3" style="width:75px height:75px">
                    <div id="cardPoke" class="card shadow border-bottom-primary mb-4">
                        <div class="card-header py-3">
                            <a class="m-0 font-weight-bold text-primary" asp-action="Details" asp-route-id="@i.Id"> @i.Name   N°: @i.Id</a>
                        </div>
                        <div class="card-body d-flex">
                            <div class="m-5">
                                @try
                                {
                                    var base64 = Convert.ToBase64String(@i.Image);
                                    if (!string.IsNullOrEmpty(base64))
                                    {
                                        var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                                        <img id="imgPoke" class="img-fluid" src="@imgSrc" />
                                    }
                                }
                                catch
                                {
                                    <img class="img-fluid" src="http://www.puspfc.usp.br/sistemas/prefeitura/imgs/sem_foto.png" width="70" />
                                }
                                <h5 style="margin-left:-45px; margin-right:-45px">@if (i.Description is not null)
                                    {
                                        @i.Description <a class="m-0" asp-action="Details" asp-route-id="@i.Id"> mais </a>
                                    } </h5>
                                <h5 class="text-primary">@i.Type</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (i.Type == "Grama")
            {
                <div class="col-md-3" style="width:75px height:75px">
                    <div id="cardPoke" class="card shadow border-bottom-success mb-4">
                        <div class="card-header py-3">
                            <a class="m-0 font-weight-bold text-success" asp-action="Details" asp-route-id="@i.Id"> @i.Name   N°: @i.Id</a>
                        </div>
                        <div class="card-body d-flex">
                            <div class="m-5">
                                @try
                                {
                                    var base64 = Convert.ToBase64String(@i.Image);
                                    if (!string.IsNullOrEmpty(base64))
                                    {
                                        var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                                        <img id="imgPoke" class="img-fluid" src="@imgSrc" />
                                    }
                                }
                                catch
                                {
                                    <img class="img-fluid" src="http://www.puspfc.usp.br/sistemas/prefeitura/imgs/sem_foto.png" width="70" />
                                }
                                <h5 style="margin-left:-45px; margin-right:-45px">@if (i.Description is not null)
                                    {
                                        @i.Description <a class="m-0" asp-action="Details" asp-route-id="@i.Id"> mais </a>
                                    } </h5>
                                <h5 class="text-success">@i.Type</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>