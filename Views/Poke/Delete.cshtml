@model Login01.Models.Pokemon

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar Pokemon</h1>

<h4 class="text-danger">Confirma apagar dados do Pokemon?</h4>
<hr />

<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row col-md-12 mb-3">
        <label asp-for="Name" class="control-label col-md-1"></label>
        <input asp-for="Name" class="form-control col-md-11" readonly/>
        </div> 
       
        <div class="row col-md-12 mb-3">
    <label asp-for="Description" class="control-label col-md-1"></label>
    <input asp-for="Description" class="form-control col-md-11" readonly />
</div>

<div class="row col-md-12 mb-3">
    <label asp-for="Type" class="control-label col-md-1"></label>
    <input asp-for="Type" class="form-control col-md-11" readonly />
</div>


<div class="row col-md-12 mb-3">
    <label asp-for="Height" class="control-label col-md-1"></label>
    <input asp-for="Height" class="form-control col-md-11" readonly />
</div>

<div class="row col-md-12 mb-3">
    <label asp-for="Width" class="control-label col-md-1"></label>
    <input asp-for="Width" class="form-control col-md-11" readonly />
</div>


<div class="row col-md-12 mb-3">
    <label asp-for="Gender" class="control-label col-md-1"></label>
    <input asp-for="Gender" class="form-control col-md-11" readonly />
</div>


<div class="row col-md-12 mb-3">
    <label asp-for="Abilities" class="control-label col-md-1"></label>
    <input asp-for="Abilities" class="form-control col-md-11" readonly />
</div>

<div class="col-md-6">
            <div class="card shadow border-bottom-danger mb-4">
                <div class="card-body d-flex">
                    <div class="m-5">
                        @try
                        {
                            var base64 = Convert.ToBase64String(@Model.Image);
                            if (!string.IsNullOrEmpty(base64))
                            {
                                var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                                <img class="img-fluid" src="@imgSrc" style="width:125px height:125px" />
                            }
                        }
                        catch
                        {
                            <img class="img-fluid" src="http://www.puspfc.usp.br/sistemas/prefeitura/imgs/sem_foto.png" width="70" />
                        }
<div class="form-group">
   <button type="submit" class="btn btn-danger btn-icon-split">
        <span class="icon text-white">
            <i class="fas fa-trash"></i>
        </span>
        <span class="text text-white">Apagar</span>
        </button>
    
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Voltar</a>
</div>
</form>