                        <h5>Descrição: @Model.Description</h5>
                        <h5>Tipo: @Model.Type</h5>
                        <h5>Genero: @Model.Gender</h5>
                        <h5>Altura (Metros): @Model.Height</h5>
                        <h5>Peso (Gramas): @Model.Width </h5>
                        <h5>Habilidades: @Model.Abilities</h5>
                    </div>
                </div>
            </div>
        </div>
    }
    <center>
    <div class="col-md-3" style="margin-left:100px">
         <a style="margin-top:250px" class="btn btn-primary btn-lg" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    </div>
    <div class="col-md-3" style="margin-left:100px">
         <a style="margin-top:25px" class="btn btn-danger btn-lg" asp-action="Delete" asp-route-id="@Model.Id">Deletar</a>
    </div>
    <div class="col-md-3" style="margin-left:100px">
         <a style="margin-top:25px" class="btn btn-secondary btn-lg" asp-action="Index">Voltar</a>
    </div>
    </center>
</div>